{% extends 'default.html.twig' %}

{% block content %}
    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Resume</th>
                <th>Creation date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.subject }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.createdAt|date('d-m-Y') }}</td>
                <td>
                    <a href="{{ path('app_post_view', {'post': post.id}) }}">View</a>
                    <a href="{{ path('app_post_update', {'post': post.id}) }}">Update</a>
                    <a href="{{ path('app_post_delete', {'post': post.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

